.container.p-0
  %h1.mb-3
    = t ('users.edit.profile')
  .row
    .col-md-5.col-xl-3
      = render 'users/menu', user: @user
    .col-md-7.col-xl-9
      .card
        .card-header
          %h5.card-title.mb-0
            = t ('users.edit.news')
        .card-body
          = render @news.ordered_by_views
          = will_paginate @news
