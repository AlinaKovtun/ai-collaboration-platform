.container.my-border
  %strong
    = comment.user.first_name
    = comment.user.last_name
  %br
  = comment.content

  = form_for [comment, Comment.new] do |f|
    %p
      = f.text_area :content, {placeholder: t('comments.comment.reply_placeholder') }
    %p
      = f.submit t('comments.comment.submit'), class: 'btn btn-outline-dark'
      - if current_user && current_user.id == comment.user_id
        = link_to t('comments.comment.delete'),
          polymorphic_path([@commentable, comment]),
          method: :delete,
          data: { confirm: t('comments.comment.confirmation') },
          class: 'btn btn-outline-dark'
  = render partial: 'comments/comment', collection: comment.comments
