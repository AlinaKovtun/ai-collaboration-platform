.container
  .row.justify-content-center
    .col-sm-5.text-center.pt-5
      %p.h4.mb-2
        Sign up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .field.text-left.pb-2
          = f.label :first_name
          = f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "defaultRegisterFormFirstName form-control"
          %ol.mb-0.mt-1
            - resource.errors[:first_name].each do |msg|
              %li.text-danger
                = msg
        .field.text-left.pb-2
          = f.label :last_name
          = f.text_field :last_name, autocomplete: "last_name", class: "defaultRegisterFormLastName form-control"
          %ol.mb-0.mt-1
            - resource.errors[:last_name].each do |msg|
              %li.text-danger
                = msg
        .field.text-left.pb-2
          = f.label :description
          = f.text_field :description, autocomplete: "description", class: "defaultRegisterFormText form-control"
          %ol.mb-0.mt-1
            - resource.errors[:description].each do |msg|
              %li.text-danger
                = msg
        .field.text-left.pb-2
          = f.label :email
          = f.email_field :email, autocomplete: "email", class: "defaultRegisterFormEmail form-control"
          %ol.mb-0.mt-1
            - resource.errors[:email].each do |msg|
              %li.text-danger
                = msg
        .field.text-left.pb-2
          - if @minimum_password_length
            %p.form-text.m-0
              Password (#{@minimum_password_length} characters minimum)
          = f.password_field :password, autocomplete: "new-password", class: "defaultRegisterFormPassword form-control", "aria-describedby" => "defaultRegisterFormPasswordHelpBlock"
          %ol.mb-0.mt-1
            - resource.errors[:password].each do |msg|
              %li.text-danger
                = msg
        .field.text-left.pb-2
          = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: "new-password", class: "defaultRegisterFormPassword form-control"
          %ol.mb-0.mt-1
            - resource.errors[:password_confirmation].each do |msg|
              %li.text-danger
                = msg
        .actions.pb-2
          = f.submit "Sign up", class: "btn btn-info btn-block"
      %p.mb-4= render "devise/shared/links"
