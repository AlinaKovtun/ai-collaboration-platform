.col-md-3
  .card-header
    %h3.mb-0
      = t('events.show.next_events')
  .card-body
    %ul.list-unstyled
      - @next_events.each do |event|
        %li.media
          .media-body
            %h4.mt-0.mb-1.font-weight-bold
              %strong
                %a.text-black{ href: event_path(event) }
                  = event.title.html_safe
            %p
              %em
                = event.event_start.strftime('%d %b %Y')
            %p.mb-1
              = truncate(strip_tags(event.description.html_safe), length: 100)
        %hr

